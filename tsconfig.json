{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/**/*.d.ts",
    ],
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true
  }
}
